<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog>
		<content>
		<Label text="{i18n>ui.dialog.startDate}" labelFor="DTP1" height="500px" width="500px"/>
		<DateTimePicker
			id="DTP1"
			value="{/startDate}" placeholder="{i18n>ui.dialog.placeholder}"
			change="handleChange"/>
		<Label text="{i18n>ui.dialog.endDate}" labelFor="DTP2"/>
		<DateTimePicker
			id="DTP2"
			value="{/endDate}" placeholder="{i18n>ui.dialog.placeholder}"
			change="handleChange"/>
		</content>
		<Button text="{i18n>ui.dialog.confirm}" press="handleConfirm"></Button>
	</Dialog>
</core:FragmentDefinition>